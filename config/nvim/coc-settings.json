{
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["markdown"]
    },
    "ruby-lsp": {
      "command": "ruby-lsp",
      "initializationOptions": {
        "experimentalFeaturesEnabled": false,
        "enabledFeatures": [
          "codeActions",
          "diagnostics",
          "documentHighlights",
          "documentLink",
          "documentSymbols",
          "foldingRanges",
          "formatting",
          "hover",
          "inlayHint",
          "onTypeFormatting",
          "selectionRanges",
          "semanticHighlighting",
          "completion"
        ],
        "formatter": "auto"
      },
      "filetypes": ["ruby"]
    }
  },

  "tsserver.enable": true,
  "eslint.enable": true,
  "eslint.experimental.useFlatConfig": true,
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,

  "suggest.noselect": true,

  "coc.preferences.formatOnSave": true,

  "dialog.floatHighlight": "CocFloating",
  "dialog.floatBorderHighlight": "CocFloating",

  "hover.floatConfig": {
    "border": true,
    "highlight": "CocHoverFloating",
    "winblend": 10
  },
  "signature.floatConfig": {
    "border": true,
    "highlight": "CocSignatureFloating",
    "winblend": 10
  },
  "suggest.floatConfig": {
    "border": true,
    "highlight": "CocSuggestFloating",
    "winblend": 10
  },

  "diagnostic.level": "hint",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": true,
  "diagnostic.virtualTextPrefix": " â–¸ ",
  "diagnostic.errorSign": "\uf65b",
  "diagnostic.warningSign": "\uf525",
  "diagnostic.infoSign": "\uf7fb",
  "diagnostic.hintSign": "\uf7d6",
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck",
    "zsh": "shellcheck",
    "python": "flake8"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "zsh": "shfmt",
    "python": "black"
  },
  "diagnostic.floatConfig": {
    "border": true,
    "highlight": "CocDiagnosticFloating",
    "winblend": 10
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": ["--quiet", "-"]
    }
  },

  "Lua.diagnostics.globals": ["vim"],
  "snippets.ultisnips.pythonPrompt": false,
  "pretty-ts-errors.mode": 2
}
